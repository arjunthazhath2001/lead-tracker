generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model Lead {
  id        Int      @id @default(autoincrement())
  companyName String
  contactName String  
  email    String     @unique
  source  Source
  status Status @default(NEW)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("business_leads")
  @@index([status])

}

enum Source {
  LINKEDIN
  INTRO
  INBOUND
  OTHER
}

enum Status {
  NEW
  CONTACTED
  CALL_DONE
  DEAL
  LOST
}